{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb", "airbnb/hooks",
        "plugin:react/recommended",
        "plugin:flowtype/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "flowtype"
    ],
    "rules": {
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect",
        "flowVersion": "detect"
      }
  }
}
